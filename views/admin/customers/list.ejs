<%- include('../../partials/admin-head', { title: 'Панель администратора' }) %>
<body class="dashboard">
  <div class="admin-container">
    <%- include('../../partials/admin-aside') %>
    <main class="content">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h1><%= title %></h1>
        <a href="/admin/customers/add" class="btn btn-primary">Добавить пользователя</a>
      </div>
      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th>ID</th>
            <th>Логин</th>
            <th>Email</th>
            <th>Телефон</th>
            <th>Действия</th>
          </tr>
        </thead>
        <tbody>
          <% customers.forEach(customer => { %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= customer.username %></td>
            <td><%= customer.email %></td>
            <td><%= customer.phone %></td>
            <td>
              <a href="/admin/customers/edit/<%= customer.id %>" class="btn btn-sm btn-warning">Редактировать</a>
              <form action="/admin/customers/delete/<%= customer.id %>" method="POST" style="display: inline">
                <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
              </form>
              <a href="/admin/customers/<%= customer.id %>/orders" class="btn btn-sm btn-info"> К заказам </a>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </main>
  </div>
  <%- include('../../partials/admin-footer') %>
</body>
