<%- include('../../partials/admin-head', { title: 'Панель администратора' }) %>
  <body class="dashboard">
    <div class="admin-container">
      <%- include('../../partials/admin-aside') %>
      <main class="content">
        <h1><%= title %></h1>

        <form method="POST" action="<%= formAction %>">
          <div class="form-group">
            <label>Имя пользователя</label>
            <input
              type="text"
              name="username"
              class="form-control"
              value="<%= staff ? staff.username : '' %>"
              required
            />
          </div>

          <div class="form-group">
            <label>Email</label>
            <input
              type="email"
              name="email"
              class="form-control"
              value="<%= staff ? staff.email : '' %>"
              required
            />
          </div>

          <div class="form-group">
            <label>Пароль</label>
            <input
              type="password"
              name="password"
              class="form-control"
              required
            />
          </div>

          <div class="form-group">
            <label>Роль</label>
            <select name="role" class="form-control" required>
              <option value="admin" <%= staff && staff.role === 'admin' ? 'selected' : '' %>>Администратор</option>
              <option value="manager" <%= staff && staff.role === 'manager' ? 'selected' : '' %>>Менеджер</option>
            </select>
          </div>

          <button type="submit" class="btn btn-primary">
            <%= isEdit ? 'Обновить' : 'Добавить' %>
          </button>

          <a href="/admin/staff" class="btn btn-secondary">Отмена</a>
        </form>
      </main>
    </div>
<%- include('../../partials/admin-footer') %>
