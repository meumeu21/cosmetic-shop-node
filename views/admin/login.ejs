<%- include('../partials/admin-head', { title: title }) %>
<body class="text-center sign-in">
  <form class="form-signin" action="/admin/login" method="POST">
    <h1 class="h3 mb-3 font-weight-normal">Вход в админку</h1>
    <% if (error) { %>
    <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <label for="email">Email</label>
    <input type="email" id="email" class="form-control" name="email" placeholder="Email" required="" autofocus="" />
    <label for="password" class="password-label">Пароль</label>
    <input type="password" id="password" class="form-control" name="password" placeholder="Пароль" required="" />
    <button type="submit" class="btn btn-lg btn-primary btn-block">Войти</button>
  </form>
  <%- include('../partials/admin-footer') %>
</body>
